{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "0.1.0",
	"command": "python",
	"isShellCommand": true,
	"args": ["waf", "configure", "build"],
	"showOutput": "always",
	"isBuildCommand": true,
	"options": {
			"env": {
			"PKG_CONFIG_PATH": "/usr/local/lib/pkgconfig"
		}	
	},
	"tasks": [
		{
			"taskName": "build_app",
			"suppressTaskName": true
		}
	]
}